{
  "name": "Tasy Metadata Extension",
  "description": "Chrome extension to present tasy metadata information",
  "version": "1.4",
  "manifest_version": 3,
  "icons": {
    "128": "icon256.png"
  },
  "permissions": [
    "storage",
    "scripting",
    "alarms",
    "activeTab"
  ],
  "host_permissions": [
    "http://*/*",
    "https://*/*"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "options_ui": {
    "open_in_tab": false,
    "page": "options.html"
  },
  "action": {
    "default_title": "Tasy Extension",
    "default_popup": "popup.html"
  },
  "content_scripts": [{
    "matches": [
      "http://*/*",
      "https://*/*"
    ],
    "exclude_matches": [
      "*://localhost/*"
    ],
    "js": [
      "content.js"
    ],
    "css": [
      "injected.css"
    ]
  }],
  "web_accessible_resources": [
    {
      "resources": [ "injected.js" ],
      "matches": [ "<all_urls>" ]
    }
  ]
}
